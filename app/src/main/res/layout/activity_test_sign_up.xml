<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.TestSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="15dp"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textSize="35sp"
            android:gravity="center"

            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:gravity="right"
                android:id="@+id/tv_x"
                android:text="Xerox : 0.35/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:gravity="right"
                android:layout_below="@+id/tv_x"
                android:text="Print : 1/page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:padding="25dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:background="@drawable/submit_button"
                android:padding="15dp"
                android:hint="Enter Your Full Name Here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_fullName"/>
            <EditText
                android:layout_marginTop="5dp"
                android:background="@drawable/submit_button"
                android:padding="15dp"
                android:hint="Enter Email Id Here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_EmailID"/>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:background="@drawable/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="22sp"
                    />
                <RadioGroup
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:id="@+id/radiogroup"
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="Male"
                        android:id="@+id/rb_male"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <RadioButton
                        android:text="Female"
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RadioGroup>
            </LinearLayout>

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/submit_button"
                android:padding="15dp"
                android:inputType="number"
                android:hint="Enter Mobile Number Here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_userName"/>
            <EditText
                android:layout_marginTop="10dp"
                android:hint="Enter PassWord Here "
                android:id="@+id/et_password"
                android:padding="15dp"
                android:inputType="textPassword"
                android:background="@drawable/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:layout_marginTop="10dp"
                android:hint="RE- Enter PassWord Here "
                android:id="@+id/et_C_password"
                android:padding="15dp"
                android:inputType="textPassword"
                android:background="@drawable/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <!--                </android.support.design.widget.TextInputLayout>-->
            <!--        <android.support.design.widget.TextInputLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            app:passwordToggleEnabled="true">-->
            <!--            <EditText-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                android:id="@+id/et_C_password"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:padding="15dp"-->
            <!--                android:background="@drawable/submit_button"-->
            <!--                android:ems="10"-->
            <!--                android:hint="RE- Enter PassWord Here "-->
            <!--                android:inputType="textPassword" />-->
            <!--        </android.support.design.widget.TextInputLayout>-->

            <EditText
                android:layout_marginTop="10dp"
                android:hint="Add 100 INR From Your Account Here"
                android:id="@+id/et_addMin"
                android:padding="15dp"
                android:background="@drawable/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_doLogIn"
                android:padding="15dp"
                android:gravity="right"
                android:textSize="15sp"
                android:text="Already User?? Login Here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_circular"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:padding="15dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:text="Send Code"
                    android:textAllCaps="false"
                    android:background="@drawable/submit_button"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/btn_SendSignUpCode"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"/>

                <Button
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:background="@drawable/submit_button"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:id="@+id/btn_signUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>

